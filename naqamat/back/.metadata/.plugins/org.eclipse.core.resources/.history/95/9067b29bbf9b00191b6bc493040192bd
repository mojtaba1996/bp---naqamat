package ir.asta.training.contacts.services;

import java.util.List;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import ir.asta.training.contacts.entities.SurahEntity;
import ir.asta.wise.core.datamanagement.ActionResult;
import requestEntities.AddSurahRequest;

@Path("/admin")
public interface AdminService {
	
	@GET
	@Path("/surah/{token}")
	@Produces(MediaType.APPLICATION_JSON)
	public ActionResult<List<SurahEntity>> getAllSurahs(@PathParam("token") String token);
	
	@POST
	@Path("/surah")
	@Consumes(MediaType.APPLICATION_JSON)
	@Produces(MediaType.APPLICATION_JSON)
	public ActionResult<Boolean> addSurah(AddSurahRequest asReq);
	
	@GET
	@Path("/qari/{token}")
	@Produces(MediaType.APPLICATION_JSON)
	public ActionResult<List<QariEntity>> getAllQaries(@PathParam("token") String token);

}
